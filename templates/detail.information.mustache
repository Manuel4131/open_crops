<table class="table table-striped table-condensed">
    <tbody>
        <tr>
            <td><strong>科</strong></td>
            <td class="ng-binding">{{{ family }}}</td>
        </tr>
        <tr>
            <td><strong>屬</strong></td>
            <td class="ng-binding">{{ genus }}</td>
        </tr>
        <tr>
            <td><strong>種</strong></td>
            <td class="ng-binding">{{ species }}</td>
        </tr>
        <tr>
            <td><strong>品種</strong></td>
            <td class="ng-binding"><b>{{ variety }}</b></td>
        </tr>
        <tr>
            <td><strong>生命週期</strong></td>
            <td class="ng-binding">{{ life_cycle }}</td>
        </tr>
        <tr>
            <td><strong>繁殖方式</strong></td>
            <td class="ng-binding">{{ propagate }}</td>
        </tr>
        <tr>
            <td><strong>發芽天數</strong></td>
            <td class="ng-binding">{{ avg_germination }}</td>
        </tr>
        <tr>
            <td><strong>移植天數</strong></td>
            <td class="ng-binding">{{ avg_transplanting }}</td>
        </tr>
        <tr>
            <td><strong>植株間距 (株距, 行距, 高度) (cm)</strong></td>
            <td class="ng-binding">{{ spread }} / {{ row_spacing }} / {{ height}}</td>
        </tr>
        <tr>
            <td><strong>成長天數</strong></td>
            <td class="ng-binding">{{ avg_total_growing_days }}</td>
        </tr>
        <tr>
            <td><strong>日照需求</strong></td>
            <td class="ng-binding">{{ sun }}</td>
        </tr>
        <tr>
            <td><strong>水分需求</strong></td>
            <td class="ng-binding">{{ watering }}</td>
        </tr>
        <tr>
            <td><strong>肥分需求</strong></td>
            <td class="ng-binding">{{ fertilizer }}</td>
        </tr>
        <tr>
            <td><strong>酸鹼值</strong></td>
            <td class="ng-binding">{{ min_pH }} ~ {{ max_pH }}</td>
        </tr>
        <tr>
            <td><strong>市場行情 (twfood.cc)</strong></td>
            <td class="ng-binding"><a href="https://www.twfood.cc/vege/{{ AMIS }}">{{ AMIS }}</a></td>
        </tr>
        <tr>
            <td><strong>原產地</strong></td>
            <td class="ng-binding">{{ origin }}</td>
        </tr>
        <tr>
            <td><strong>是否有入侵性</strong></td>
            <td class="ng-binding">{{ invasive }}</td>
        </tr>
        <tr>
            <td><strong>備註</strong></td>
            <td class="ng-binding">{{ comment }}</a></td>
        </tr>
    </tbody>
</table>
